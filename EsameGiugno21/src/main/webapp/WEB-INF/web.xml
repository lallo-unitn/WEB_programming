<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>HomeServlet</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>it.unitn.disi.web.RG.esamegiugno21.auxiliary.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/DetailsServlet</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>it.unitn.disi.web.RG.esamegiugno21.servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>it.unitn.disi.web.RG.esamegiugno21.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Validate</servlet-name>
        <servlet-class>it.unitn.disi.web.RG.esamegiugno21.servlets.ValidateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>it.unitn.disi.web.RG.esamegiugno21.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Details</servlet-name>
        <servlet-class>it.unitn.disi.web.RG.esamegiugno21.servlets.DetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubmitOffer</servlet-name>
        <servlet-class>it.unitn.disi.web.RG.esamegiugno21.servlets.SubmitOfferServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Sold</servlet-name>
        <servlet-class>it.unitn.disi.web.RG.esamegiugno21.servlets.SoldServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/HomeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Validate</servlet-name>
        <url-pattern>/ValidateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Details</servlet-name>
        <url-pattern>/DetailsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubmitOffer</servlet-name>
        <url-pattern>/SubmitOfferServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Sold</servlet-name>
        <url-pattern>/SoldServlet</url-pattern>
    </servlet-mapping>
</web-app>